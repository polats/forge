{
  "name": "@polats/forge",
  "description": "Command-line NPM package for creating cryptoitems",
  "version": "0.3.1",
  "author": "Paul Gadi @polats",
  "bin": {
    "forge": "./bin/run"
  },
  "bugs": "https://github.com/polats/forge/issues",
  "dependencies": {
    "@oclif/command": "^1.5.6",
    "@oclif/config": "^1.9.0",
    "@oclif/plugin-help": "^2.1.4",
    "tslib": "^1.9.3",
    "web3": "^1.0.0-beta.36",
    "dotenv": "^6.2.0",
    "chalk": "^2.3.0",
    "figlet": "^1.2.0",
    "clear": "0.0.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.19.5",
    "@oclif/test": "^1.2.2",
    "@oclif/tslint": "^3.1.1",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "chai": "^4.2.0",
    "globby": "^8.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/polats/forge",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "forge",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "polats/forge",
  "scripts": {
    "postpack": "rimraf oclif.manifest.json",
    "posttest": "tslint -p test -t stylish",
    "prepack": "rimraf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts"
}
